<div class="container">

    <div class="row justify-content-center">
        <div class="col-10">

        <%= render 'shared/errors', obj: @article %>

            <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>

                <div class="form-group row"> 
                    <%= f.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow", placeholder: "Title of article" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :description, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow", placeholder: "Description" %>
                    </div>

                </div>

                <div class="form-group ">
                    <div class="row justify-content-center">
                        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
                        <% cb.label(class: "form-check form-check-inline") {cb.check_box(class: "form-check-input") + cb.text} %>
                        <% end %>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>

            <% end %>
            
        </div>
    </div>

    <div class="row justify-content-center">
        <%= link_to "[Return to article listing]", articles_path, class:"text-info" %>
    </div>

</div>