<h1>Create a new article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>

    <div> 
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>

    <div>
        <%= f.submit %>
    </div>

<% end %>